 
<div class='jumbotron jumbotron-fluid'>
 
  <div class='container col-auto'>
     <div class="logout">
       
     <button class="no-button" id="logout">logout</button>
</div>
    
    <h2 class='display-4 text-light'>Welcome, {{name}}!</h2>
    <p class='lead text-light'>The object of this mission is to safely get the outerspace
      EMS vehicle through the asteroid field to deliver the emergency supplies
      to the destination planet. Use the arrow keys to navigate through the
      asteroid belt. Use spacebar to fire your lasers and blast away objects.
    </p>
  </div>
</div>

<div class='row justify-center align-center'>
  <div class="col" id="game-window">
        <script src="../game/Sketch.js"></script>
        <script src="../game/Hud.js"></script>
         <script src="../game/Controls.js"></script>
        <script src="../game/Asteroid.js"></script>
        <script src="../game/Laser.js"></script>
        <script src="../game/Ship.js"></script>
        <script src="../game/Planet.js"></script>
      </div>

</div>

<section class='scoreboard' style=''>
  <div class='card-header text-center p-3'>
    <h1 class= "text-light">HI-SCORES</h1>
  
    <table class='table table-striped table-responsive'>
      <thead>
        <tr>
          <th scope='col'>#</th>
          <th scope='col'>Username</th>
          <th scope='col'>Score</th>
        </tr>
      </thead>

      <tbody>
       
        {{#each players as |player| }}
         
        <tr>
          <th scope='row'>{{id}}</th>
          <td>{{name}}</td>
          <td>{{Score.user_hiScore}} </td> 
        </tr>
        {{/each}}
      </tbody>
    </div>
  </table>
 {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
</section>
 